{
  "extends": "solium:all",
  "plugins": [
    "security"
  ],
  "rules": {
    "operator-whitespace": "error",
    "deprecated-suicide": "error",
    "no-empty-blocks": "error",
    "pragma-on-top": "error",
    "indentation": "error",
    "whitespace": "error",
    "lbrace": "error",
    "camelcase": "error",
    "mixedcase": "warning",
    "uppercase": "warning",
    "arg-overflow": ["error", 8],
    "security/enforce-explicit-visibility": ["error"],
    "function-order": [
      "error",
      {
        "ignore": {
          "functions": ["initialize"]
        }
      }
    ]
  }
}
